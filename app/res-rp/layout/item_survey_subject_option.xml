<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:LtextColor="@color/grey"
        leon:isShowRightText="false"
        leon:leftIcon="@mipmap/item_delete"
        leon:leftText=""
        leon:rightStyle="iconHide" />


    <LinearLayout
        android:id="@+id/layout_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_white_blue_r1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="+ 添加选项"
            android:textColor="@color/pastelBlueColor"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>