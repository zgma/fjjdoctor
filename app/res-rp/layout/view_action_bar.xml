<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bar_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size"
    android:background="@color/action_bar_bg">

    <ImageView
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="30dp"
        android:src="@drawable/actionbar_white_back_icon" />

    <TextView
        android:id="@+id/left_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/action_bar_action_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/action_bar_title_text"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginHorizontal="40dp"
        android:textSize="@dimen/action_bar_title_size" />


    <TextView
        android:id="@+id/right_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="完成"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/action_bar_action_size"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="30dp"
        android:paddingRight="@dimen/common_margin"
        android:src="@mipmap/arrow_right"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thick_line_size"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />
</RelativeLayout>