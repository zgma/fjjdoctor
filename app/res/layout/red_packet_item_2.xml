<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    >

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/avatar_size_in_contact"
        android:layout_height="@dimen/avatar_size_in_contact"
        android:layout_centerVertical="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="@+id/img_head" />

    <RelativeLayout
        android:id="@+id/bri_rev"
        android:layout_width="220dp"
        android:layout_height="85dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_packet_rev_bg"
        app:layout_constraintLeft_toRightOf="@+id/img_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name">


        <ImageView
            android:id="@+id/iv_icon_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/red_packet_icon_normal" />


        <TextView
            android:id="@+id/tv_bri_mess_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/iv_icon_rev"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="恭喜发财，大吉大利"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bri_target_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_icon_rev"
            android:gravity="center|left"
            android:text="@string/open_rp"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_bri_name_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="@string/red_packet"
            android:textColor="@color/color_999"
            android:textSize="10sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
